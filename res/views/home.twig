{% extends 'templates/default.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">
		{% if global_error %}
            <div class="alert alert-danger">
                {{ global_error }}
            </div>
        {% endif %}

        {% if flash.getMessage('global').0 %}
            <div class="alert alert-success">{{ flash.getMessage('global').0 }}</div>
        {% endif %}
					<form action="{{ path_for('send') }}" method="post" accept-charset="utf-8">
						<div class="form-group">
							<label for="email">Send to</label>
							<input type="email" name="email" id="email" class="form-control" placeholder="someone@com.com" value="{{ request.email }}">
							{% if errors.has('email') %} 
							<div class="bg-warning">
							{{ errors.first('email') }} 
							</div>
							{% endif %}
						</div>
						<div class="form-group">
							<label for="message">Message</label>
							{% if errors.has('message') %} 
							<div class="bg-warning">
							{{ errors.first('message') }} 
							</div>
							{% endif %}
							<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Message here...">{{ request.message }}</textarea>
						</div>	
						<button class="btn">Send</button>
						
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}