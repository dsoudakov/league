{% extends 'templates/default.twig' %}
{% use 'nav.inc' %}

{% block head %}

{{parent()}}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/s/bs/dt-1.10.10/datatables.min.css"/>

{% endblock head %}

{% block content %}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
        {% if flash.getMessages() %}
          {% for k, messages in flash.getMessages() %}
            {% for message in flash.getMessages()[k] %}
              {% if k == 'global' %}
                <div class="alert alert-success">
                  <button type="button" class="close" data-dismiss="alert">&times;</button>
                  {{ message }}
                </div>
              {% else %}
                <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">&times;</button>
                  {{ message }}
                </div>
              {% endif %}
            {% endfor %}
          {% endfor %}
        {% endif %}


{% block nav %}
  {{ parent() }}
{% endblock nav %}

    </div>
    <div class="col-md-8">
      <div class="panel">
        {% if user.divisionprimary is null and user.divisionsecondary is null %}
          <div class="panel-heading">
            <div class="panel-title">
              <h2><strong>You have to join at least one division!</strong></h2>
            </div>
          </div>

        {% else %}

          <div class="panel-heading">
            <div class="panel-title">
              <h2><strong>Current Open Challenges</strong></h2>
            </div>
          </div>

        {% endif %}  
          <!-- Panel body -->
          <div class="panel-body">
            
                  <div class="table-responsive">
                    <table id="challengesissuedtable" class="display wrapme table table-bordered table-striped table-condensed table-hover" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                    <th></th>
                    <th>Challenger</th>
                    <th>Date</th>
                    <th>Division</th>
                    <th>Note</th>
                    </tr>
                    </thead>

                    <tfoot>
                    <tr>
                    <th></th>
                    <th>Challenger</th>
                    <th>Date</th>
                    <th>Division</th>
                    <th>Note</th>
                    </tr>
                    </tfoot>
                    </table>
                  </div>


  	          		
  	          	</div>
  	          </div>
      
    </div>
    <div class="col-md-2">
    	Right column. Open challenges.
    </div>
  </div>
</div>

<div id="acceptModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header label-primary" style="
          height: 50px;
          border-top-left-radius: 5px; 
          border-top-right-radius: 5px;
      ">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Accept a challenge</h4>
      </div>
      <div class="modal-body">
        <div id="loading1">
            <img src="{{SITEROOT}}/res/img/loader.gif">
        </div>        
        <div class="modal-body-inner1"></div>
        <div class="modal-body-inner2"></div>
      </div>
    </div>
  </div>
</div>


<div id="noteModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header label-success" style="border-top-left-radius: 5px; border-top-right-radius: 5px;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Challenge details</h4>
      </div>
      <div class="modal-body">
          <div id="loading1">
            <img src="{{SITEROOT}}/res/img/loader.gif">
          </div>
        <div class="modal-body-inner1"></div>
      </div>
    </div>
  </div>
</div>



{% endblock content %}

{% block js %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.14.0/jquery.validate.min.js"></script>
<script src="{{SITEROOT}}/res/js/jquery-validate.bootstrap-tooltip.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/s/bs/dt-1.10.10/datatables.min.js"></script>

<script type="text/javascript">

  $(document).ready(function() {

     var items = [];
      
      $.getJSON( "{{ path_for('challenges.issued.get.json')}}", function( data ) {
      
        $.each( data, function( key, val ) {
          var item = [];
          
          var userid = {{ user.id | default(0) }};
          var userpid = {{ user.divisionprimary | default(0) }};
          var usersid = {{ user.divisionsecondary | default(0) }};

          if (userpid == data[key]['challenge_in_division'] || usersid == data[key]['challenge_in_division']) {

            if (userid == data[key]['acceptedbyuserid']) {
                if (data[key]['cancelnote']) {

                    item.push('<a class="btn btn-sm btn-block btn-danger disabled" href="">Cancelled (you)</a>');

                } else {
                    if (data[key]['confirmed'] == 1) {
                        item.push('<a class="btn btn-sm btn-block btn-success disabled" href="">Confirmed</a>');
                    } else {
                        item.push('<a class="btn btn-sm btn-block btn-warning disabled" href="">Accepted</a>');
                    }
                }
            } else {
              item.push(
                '<a class="btn btn-sm btn-block btn-primary" data-toggle="modal" data-target="#acceptModal" data-remote="false" href="{{SITEROOT}}/challenge/accept/' +  data[key]['challengeid'] + '">Accept</a>'
              );
            }
          } else {
            item.push('Not in your division');
          }

          item.push(data[key]['challenger'] );
          item.push(data[key]['challengedate'] );
          item.push(data[key]['challengeddivision'] );
        item.push( '<a class="btn btn-sm btn-block btn-primary" data-toggle="modal" data-target="#noteModal" data-remote="false" href="{{SITEROOT}}/challenge/details/' + data[key]['challengeid'] + '" title="' + data[key]['challengenote'] + '">Note</a>');
         // item.push('');
          items.push(item);

        });

        if (items.length <= 10) {
          var opts =  {

            "order": [[ 2, "desc" ]],
            "paging":   false,
            "info":     false,
            "searching": false,
          };
        }
        
        var oTable = $('#challengesissuedtable').dataTable(opts);
        oTable.fnClearTable();

        for(var i = 0; i < items.length; i++) { 
            oTable.fnAddData([ items[i][0], items[i][1], items[i][2], items[i][3], items[i][4] ]);
        }; 
      
      });
    
    function setJQValidate (id) {
      $( id ).validate({
        rules: {
          challengeAcceptNote: {
            required: true,
            maxlength: 200,
          }
        },
        messages: {
          challengeAcceptNote: {
            required: "Accept note cannot be blank.",
            maxlength: jQuery.validator.format("No more than {0} characters!"),
          },
        },         
        tooltip_options: {
          challengeAcceptNote: { 
            placement: 'bottom',
          },
        },

      });  
    }

    $("#acceptModal").on("show.bs.modal", function(e) {
        var loadingElem = $(this).find("#loading1");
        loadingElem.show();
        var form = "";
        var details = "";
        var elem1 = $(this).find(".modal-body-inner1");
        var elem2 = $(this).find(".modal-body-inner2");
        elem1.html("");
        elem2.html("");

        var link = $(e.relatedTarget);
        var link_1 = link.attr("href");
        var link_2 = link_1.replace('accept', 'details');

        $.get( link_1 ).done( function(data) {
            form = data;
        })
        .done( function () {
            elem2.prepend(form);
            setJQValidate('#acceptChallengeForm');
        })
        .done( function () {

          $.get( link_2 ).done( function(data) {
              details = data;
          })
          .done( function () {
              elem1.prepend(details);
              loadingElem.hide();
          });

        });        
    });

    $("#noteModal").on("show.bs.modal", function(e) {

        var form = "";

        var loadingElem = $(this).find("#loading1");
        loadingElem.show();

        var elem1 = $(this).find(".modal-body-inner1");
        elem1.html("");
        
        var link = $(e.relatedTarget);
        var link_text = link.attr("href");
        var link_1 = link_text.replace('accept', 'details');

        $.get( link_1 ).done( function(data) {
            form = data;
        })
        .done( function () {
            elem1.prepend(form);
            loadingElem.hide();
        });

    });

    $("#noteModal, #acceptModal")
     .on("hide.bs.modal", function(e) {

        $(this).find(".modal-body-inner1").html("");
        $(this).find(".modal-body-inner2").html("");

    });

});

</script>

{% endblock js %}